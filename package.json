{
  "name": "@enthu/n8n-nodes-zoho-desk",
  "version": "0.2.0",
  "description": "n8n community node for Zoho Desk API integration",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "zoho",
    "zoho-desk",
    "enthu"
  ],
  "license": "MIT",
  "homepage": "https://github.com/enthuziastic/n8n-nodes-zoho-desk",
  "author": {
    "name": "Enthuziastic",
    "email": "tispratik@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/enthuziastic/n8n-nodes-zoho-desk.git"
  },
  "publishConfig": {
    "access": "public",
    "@enthu:registry": "https://registry.npmjs.org"
  },
  "engines": {
    "node": ">=18.10"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy:icons",
    "copy:icons": "cp nodes/ZohoDesk/*.svg dist/nodes/ZohoDesk/ 2>/dev/null || true",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:patch": "npm run version:patch && npm publish",
    "publish:minor": "npm run version:minor && npm publish",
    "publish:major": "npm run version:major && npm publish"
  },
  "files": [
    "dist",
    "index.js"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ZohoDeskOAuth2Api.credentials.js"
    ],
    "nodes": [
      "dist/nodes/ZohoDesk/ZohoDesk.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "n8n-workflow": "*",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
