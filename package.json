{
  "name": "n8n-nodes-zoho-desk",
  "version": "1.0.3",
  "description": "n8n community node for Zoho Desk API integration - Tickets, Contacts, and Accounts management",
  "keywords": [
    "n8n-community-node-package",
    "n8n",
    "zoho",
    "zoho-desk",
    "helpdesk",
    "tickets",
    "crm"
  ],
  "license": "MIT",
  "homepage": "https://github.com/ron137/n8n-nodes-zoho-desk",
  "author": {
    "name": "Ron",
    "email": "rons137@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ron137/n8n-nodes-zoho-desk.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.10"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && npm run copy:icons",
    "copy:icons": "cp nodes/ZohoDesk/*.svg dist/nodes/ZohoDesk/ 2>/dev/null || true",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint 'nodes/**/*.ts' 'credentials/**/*.ts'",
    "prepare": "husky",
    "prepublishOnly": "npm run build",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major",
    "publish:patch": "npm run build && npm run version:patch && npm publish",
    "publish:minor": "npm run build && npm run version:minor && npm publish",
    "publish:major": "npm run build && npm run version:major && npm publish",
    "test": "jest",
    "test:integration": "jest tests/integration",
    "test:coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.ts": [
      "npm run format"
    ]
  },
  "files": [
    "dist",
    "index.js"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ZohoDeskOAuth2Api.credentials.js"
    ],
    "nodes": [
      "dist/nodes/ZohoDesk/ZohoDesk.node.js",
      "dist/nodes/ZohoDesk/ZohoDeskTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "n8n-workflow": "*",
    "prettier": "^3.1.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.3.3"
  }
}
